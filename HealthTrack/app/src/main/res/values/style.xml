<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">#A8A8A8</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="android:textSize">100sp</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">33dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text25" parent="TextAppearance.AppCompat">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="color">@color/black</item>
    </style>

    <style name="Text16" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/purpleLight</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="TextNormal" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="color">@color/black</item>
    </style>
</resources>